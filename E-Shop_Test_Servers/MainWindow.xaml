<Window x:Class="E_Shop_Test_Servers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Shop_Test_Servers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Height="300" VerticalAlignment="Bottom" Margin="40" x:Name="LogsTextBlock" TextWrapping="Wrap"/>
        <StackPanel>
            <Label Content="Status" x:Name="StatusLabel"/>
            <Label Content="IP" x:Name="IPLabel"/>
            <Label Content="Port" x:Name="PortLabel"/>
        </StackPanel>
        <Button Height="20" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Запуск" x:Name="RunButton" Click="RunButton_Click"/>
        <Button Height="20" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Выключение" x:Name="ShutDownButton" Click="ShutDownButton_Click"/>
    </Grid>
</Window>
